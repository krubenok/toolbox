{
    // Recommended lint settings https://golangci-lint.run/docs/welcome/integrations/#visual-studio-code
    "go.lintTool": "golangci-lint",
    "go.lintFlags": [
        "--path-mode=abs",
        "--fast-only"
    ],
    "go.formatTool": "custom",
    "go.alternateTools": {
        "customFormatter": "golangci-lint"
    },
    "go.formatFlags": [
        "fmt",
        "--stdin"
    ]
}
